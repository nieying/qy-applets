/**app.wxss**/

pages {
  position: relative;
  z-index: 9999998;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  background: #eaedf2;
  margin-bottom: 55px;
  font-size: 13px;
  font-family: SFUIDisplay-Heavy, SFUIDisplay;
}

.header {
  display: flex;
  align-items: center;
  padding: 10px 0 0 15px;
}

.header .title {
  border-left: 3px solid #ffd100;
  padding-left: 10px;
  font-size: 16px;
}

.content {
  background: white;
  border-top-left-radius: 20px;
  border-top-right-radius: 20px;
  padding: 20px 15px;
}

.bottom {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 80px;
  background-color: #282d4b;
  z-index: 500;
  border-top-left-radius: 20px;
  border-top-right-radius: 20px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.bottom text {
  color: white;
}
