.page-tags {
  /* height: 100%; */
  background: #eaedf2;
}
.ov-auto {
  overflow-y: auto;
}

.tab-header {
  display: flex;
  padding-left: 20rpx;
}

.tab-header .tab-item {
  margin: 0 20rpx;
  color: #90a4ae;
  font-size: 28rpx;
  font-weight: 600;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.tab-header  .active {
  color: #282d4b;
}

.tab-header  .line {
  margin-top: 16rpx;
  width: 56rpx;
  height: 6rpx;
  background: rgba(255, 209, 0, 1);
  border-radius: 20rpx;
}

.warp, .list {
  margin-top: 32rpx;
}

.section {
  padding: 20rpx 30rpx;
  align-items: center;
  margin: 20rpx 0;
  border-bottom: 4rpx solid rgba(245, 247, 249, 1);
}

.user-form .desc {
  margin-bottom: 20rpx;
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(144, 164, 174, 1);
}

.user-form  .name {
  font-size: 32rpx;
  font-weight: 600;
  color: rgba(40, 45, 75, 1);
  line-height: 48rpx;
}

.wx-switch-input {
  width: 82rpx !important;
  height: 36rpx !important;
}

input {
  font-size: 32rpx !important;
}

.wx-switch-input::before {
  width: 80rpx !important;
  height: 36rpx !important;
}

.wx-switch-input::after {
  width: 40rpx !important;
  height: 36rpx !important;
}

.tip-warp {
  margin-top: 80rpx;
  display: flex;
  flex-direction: column;
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(144, 164, 174, 1);
  text-align: center;
}

