<view class="page-subject">
  <view class="header" style='padding-top: {{height + 10}}px'>
    <icon type="clear" size="30" color="black" bindtap="goBack" />
    <view class='progress' wx:if="{{!isLoading}}">
      <progress percent="60" backgroundColor="#B0BEC5" color="#FFD500" stroke-width="8" border-radius="8" />
    </view>
    <view class="money" wx:if="{{!isLoading}}">
      <image src='/pages/images/buy/icon-life.svg'></image> 98</view>
  </view>
  <view class="content">
    <!-- loding页面 -->
    <view class='page-loading' wx:if="{{isLoading}}">
      <image class='logo' src="/pages/images/logo.png"></image>
      <image class='man' src="/pages/images/man_woman.svg"></image>
    </view>

    <view class='subject-type' wx:if="{{!isLoading}}">
      <!-- 文本 -->
      <view class='subject-txt' wx:if="{{type === 1}}">
        <view class='name'>
          <text>选择正确的翻译</text>
        </view>
        <view class='topic'>你豁别个哦</view>
      </view>
      <!-- 看图题 -->
      <view class='subject-pic' wx:if="{{type === 2}}">
        <view class='name'>
          <text>选择正确的翻译</text>
        </view>
        <image src=""></image>
      </view>

      <!-- 听力题 -->
      <view class='subject-listen' wx:if="{{type === 3}}">
        <view class='name'>
          <text>根据听到的内容选择</text>
          <image src='/pages/images/subject/icon-listen.svg'></image>
        </view>
        <view class='topic'>你豁别个哦</view>
      </view>

      <!-- 选图题 -->
      <view class='subject-tone' wx:if="{{type === 4}}">
        <view class='topic'>哪一张图片用来表示“可以”？</view>
        <view class='tone-list'>
          <view class='item'>
            <icon type="success" size="30" color="#282D4B" />
            <image src=''></image>
          </view>
          <view class='item'>
            <icon type="success" size="30" color="#282D4B" />
            <image src=''></image>
          </view>
          <view class='item'>
            <icon type="success" size="30" color="#282D4B" />
            <image src=''></image>
          </view>
          <view class='item'>
            <icon type="success" size="30" color="#282D4B" />
            <image src=''></image>
          </view>
        </view>
      </view>

      <view class='answer-list' wx:if="{{type !== 4}}">
        <!-- correct -->
        <view wx:for="{{answerList}}" wx:for-item="item" wx:key="index" data-id="{{index}}" class="item {{ item.checked? 'checked' :''}} {{isAnswered ? correct && item.checked && 'correct' : ''}}" bindtap='getradio'>
          <!-- 
         correct #00C853
         wrong #F44336
          -->
          <icon type="success" size="30" color="{{item.checked?'#282D4B':'white'}}" />
          <text>{{item.value}}</text>
        </view>
      </view>

      <view class='answer-tips' wx:if="{{correct}}">
        <icon type="success" size="30" color="#00C853" />
        <text>恭喜您!   </text> 答对了
      </view>
    </view>
  </view>

  <view class='bottom bottom-loading' wx:if="{{isLoading}}">
    <view class='loading'>加载中…</view>
    <view class='tips'>
      四川话又称巴蜀方言，属汉语西南官话。</view>
    <view class='tips'> 现今四川话形成于清朝康熙年间</view>
  </view>
  <view class="bottom {{isAnswered ? correct ? 'correct' : 'wrong' : selectAnswer.length === 0 ? 'disable':''}}" wx:if="{{!isLoading}}" bindtap='submit'>
    {{isAnswered?'继续':'提交'}}
  </view>
</view>