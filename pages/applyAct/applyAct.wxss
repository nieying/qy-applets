.page-tags {
  /* height: 100%; */
  background: #eaedf2;
}

.ov-auto {
  overflow-y: auto;
}

.warp,
.list {
  margin-top: 32rpx;
}

.act-img image {
  width: 240rpx;
  height: 240rpx;
  margin-bottom: 64rpx;
}

.title1 {
  font-size: 36rpx;
  font-weight: 600;
  color: rgba(40, 45, 75, 1);
}

.time {
  margin-top: 20rpx;
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(144, 164, 174, 1);
  margin-bottom: 56rpx;
}

.section {
  padding: 20rpx 0;
  align-items: center;
  margin: 20rpx 0;
}

.select-list {
  text-align: center;
}

.select-list view {
  width: 41.3%;
  background: #eaedf2;
  padding: 20rpx;
  margin: 0 10rpx 20rpx 10rpx;
  text-align: center;
  border-radius: 8rpx;
  display: inline-block;
}

.select-list view.checked {
  background: rgba(40, 45, 75, 1);
  color: gold;

}

.user-form .desc {
  margin-bottom: 20rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color:rgba(40,45,75,1);
}

.user-form .desc text {
  color: #3380FF;
}

.user-form .name {
  font-size: 32rpx;
  font-weight: 600;
  color: rgba(40, 45, 75, 1);
  line-height: 48rpx;
}

.wx-switch-input {
  width: 82rpx !important;
  height: 36rpx !important;
}

input {
  font-size: 32rpx !important;
  background: #eaedf2;
  padding: 20rpx;
  border-radius: 8rpx;
}

.wx-switch-input::before {
  width: 80rpx !important;
  height: 36rpx !important;
}

.wx-switch-input::after {
  width: 40rpx !important;
  height: 36rpx !important;
}

.tip-warp {
  margin: 60rpx 0;
  display: flex;
  flex-direction: column;
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(144, 164, 174, 1);
  text-align: center;
}

