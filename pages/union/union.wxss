.page-union {
  /* height: 100%; */
  background: #eaedf2;
  position: relative;
}

.show-section {
  display: flex;
  justify-content: space-between;
  position: relative;
}

.show-section .left {
  display: flex;
  align-items: center;
}

.show-section .left image {
  width: 112rpx;
  height: 112rpx;
  border-radius: 50%;
  background: rgba(176, 190, 197, 1);
  margin-right: 32rpx;
}

/* .show-section .setting {
  right: 40rpx;
} */

.card {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  /* height: 344rpx; *//* background: rgba(245, 247, 249, 1); */
  border-radius: 20rpx;
  /* margin-top: 32rpx; */
  position: relative;
}

/* .card .btn {
  position: absolute;
  right: 15rpx;
  top: 15rpx;
  font-size: 20rpx;
} */

.follow-topic {
  margin: 50rpx 0;
  text-align: center;
}

.setting {
  position: absolute;
  right: -30rpx;
  top: 0;
  width: 80rpx;
  height: 80rpx;
}

.setting image {
  background: transparent !important;
  width: 45rpx;
  height: 45rpx;
}

.card image.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  background: rgba(176, 190, 197, 1);
  margin-bottom: 10rpx;
}

.card .name, .union-info .name, .show-section .name {
  font-size: 38rpx;
  font-weight: 600;
  color: rgba(40, 45, 75, 1);
  /* margin: 24rpx 0 8rpx 0; */
}

.card .desc, .union-info .desc, .show-section .desc {
  font-size: 32rpx;
  font-weight: 400;
  color: rgba(144, 164, 174, 1);
}

.union-info {
  display: flex;
}

.union-info .name, .show-section .name {
  font-size: 32rpx;
}

.union-info .desc, .show-section .desc {
  font-size: 24rpx;
}

.union-info view.item {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.tabs {
  margin-top: 40rpx;
}

.tab-header {
  display: flex;
  justify-content: center;
}

.tab-header .tab-item {
  margin: 0 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.tab-header .tab-item .name {
  color: #90a4ae;
  font-size: 28rpx;
  font-weight: 600;
}

.tab-header  .active .name {
  color: #282d4b;
}

.tab-header  .line {
  margin-top: 16rpx;
  width: 56rpx;
  height: 6rpx;
  background: rgba(255, 209, 0, 1);
  border-radius: 3rpx;
}

.tab-content {
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  /* background: #eaedf2; */
  font-size: 26rpx;
  width: 100%;
  overflow-x: hidden;
}
