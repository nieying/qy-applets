.page-language {
  /* height: 100%; */
  background: #eaedf2;
  width: 100%;
}

scroll-view {
  width: auto;
}

.select-language {
  font-size: 32rpx;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  color: rgba(144, 164, 174, 1);
  line-height: 48rpx;
  text-align: center;
  padding-top: 8rpx;
}

.list .type {
  display: flex;
  align-items: center;
  margin: 64rpx 0 40rpx 0;
  font-size: 38rpx;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  color: rgba(40, 45, 75, 1);
  line-height: 56rpx;
}

.list .type .line {
  width: 6rpx;
  height: 40rpx;
  background: #ffd100;
  margin-right: 16rpx;
  border-radius: 20rpx;
}

.list {
  margin: 64rpx 0;
}

.list .item view {
  display: inline-block;
  border: 4rpx solid rgba(234, 237, 242, 1);
  background: white;
  color: #282d4b;
  border-radius: 50rpx;
  padding: 15rpx 24rpx;
  margin-right: 24rpx;
  font-size: 28rpx;
  font-family: HYYakuHei-HEW, HYYakuHei, sans-serif;
  font-weight: 600;
  line-height: 36rpx;
}


.list .item view.check {
  background: #ffd100;
  border: 4rpx solid #ffd100;
}