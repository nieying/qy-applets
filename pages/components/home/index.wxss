@import "../../../app.wxss";

.header .popver-select {
  background: #282d4b;
  color: white;
  padding: 14rpx 24rpx;
  border-radius: 40rpx;
}

.popver-list {
  position: relative;
  margin-top: -40rpx;
  background: #ffd100;
  border-radius: 40rpx;
  padding: 28rpx 40rpx;
  overflow: hidden;
}

.popver-list .left {
  width: 80%;
  float: left;
}

.popver-list text {
  display: inline-block;
  background: #282d4b;
  color: white;
  border-radius: 40rpx;
  padding: 10rpx 20rpx;
  margin: 10rpx;
}

.popver-list text.check {
}

.popver-list text.select {
  background: #00c853;
}

.popver-list .right {
  float: right;
  background: #282d4b;
  color: white;
  font-size: 40rpx;
  font-weight: bold;
  border-radius: 50%;
  /* padding: 8rpx; */
  width: 64rpx;
  height: 64rpx;
  text-align: center;
}

.header view.progress {
  margin: 0 40rpx;
  font-size: 24rpx;
}

.header view.progress .txt {
  margin-top: 6rpx;
}

.header view.progress text {
  color: #b0bec5;
  font-weight: bold;
}


