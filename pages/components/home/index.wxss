@import "../../../app.wxss";

.page-home {
  background: #eaedf2;
  width: 100%;
  overflow-x: hidden;
}

.header .popver-select {
  display: flex;
  align-items: center;
  background: #282d4b;
  color: white;
  padding: 14rpx 24rpx;
  border-radius: 40rpx;
  font-size: 24rpx;
}

.content {
  position: relative;
}

.popver-select image {
  margin-left: 8rpx;
  width: 16rpx;
  height: 11rpx;
}

.popver-list {
  position: absolute;
  left: 30rpx;
  width: 81%;
  margin-top: -40rpx;
  background: #ffd100;
  border-radius: 40rpx;
  padding: 28rpx 40rpx;
  overflow: hidden;
  z-index: 9999;
}

.popver-list .left {
  width: 80%;
  float: left;
}

.popver-list .item {
  position: relative;
  display: inline-block;
}

.popver-list .item text {
  display: inline-block;
  background: #282d4b;
  color: white;
  border-radius: 40rpx;
  padding: 10rpx 20rpx;
  margin: 10rpx;
}

.popver-list .item image {
  width: 20rpx;
  height: 20rpx;
  position: absolute;
  right: 10rpx;
  top: 2rpx;
}

.popver-list text.check {
}

.popver-list text.select {
  background: #00c853;
}

.popver-list .right {
  float: right;
  background: #282d4b;
  color: white;
  font-size: 40rpx;
  font-weight: bold;
  border-radius: 50%;
  /* padding: 8rpx; */
  width: 64rpx;
  height: 64rpx;
  text-align: center;
}

.header view.progress {
  margin: 0 40rpx;
  font-size: 24rpx;
}

.header view.progress .txt {
  margin-top: 6rpx;
}

.header view.progress text {
  color: #b0bec5;
  font-weight: bold;
}

.home-warp {
  margin-top: 150rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.home-warp .box {
  position: relative;
  width: 360rpx;
  height: 360rpx;
  padding: 20rpx;
  border-radius: 50%;
  /* border: 6rpx solid #ffd100; */
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.home-warp .box .star {
  position: absolute;
  right: 0;
  top: 0;
  width: 64rpx;
  height: 64rpx;
  padding: 20rpx;
  border-radius: 50%;
  background: white;
  border: 6rpx solid #eaedf2;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.home-warp .box .active {
    border: 6rpx solid #ffd100;
}

.home-warp .box .star image {
  width: 64rpx;
  height: 64rpx;
}

.home-warp .unit-txt {
  margin-top: 30rpx;
  height: 64rpx;
  line-height: 64rpx;
  background: rgba(234, 237, 242, 1);
  border-radius: 50rpx;
  font-size: 32rpx;
  font-weight: 600;
  color: rgba(40, 45, 75, 1);
  padding: 8rpx 40rpx;
}

.home-warp .box .unit-img {
  width: 320rpx;
  height: 320rpx;
  border-radius: 50%;
  background: #282d4b;
  display: flex;
  justify-content: center;
  align-items: center;
}

.home-warp .box .unit-img image {
  width: 192rpx;
  height: 192rpx;
}

.unit-list {
  position: absolute;
  bottom: 20rpx;
  height: 220rpx;
  white-space: nowrap;
  width: 100%;
}

.unit-list .item {
  position: relative;
  width: 96rpx;
  height: 96rpx;
  padding: 25rpx;
  text-align: center;
  border-radius: 50%;
  display: inline-block;
  background: rgba(234, 237, 242, 1);
}

.unit-list .item:not(:first-child) {
  margin-left: 28rpx;
}

.unit-list .item .index {
  position: absolute;
  top: -30rpx;
  left: -20rpx;
  width: 64rpx;
  height: 64rpx;
  background: #cfd8dc;
  color: white;
  font-size: 28rpx;
  font-weight: 800;
  border-radius: 50%;
  border: 4rpx solid #fff;
  display: flex;
  align-items: center;
  justify-content: center;
}

.unit-list .unit-circle {
  display: inline-block;
  margin: 0 14rpx;
}

.unit-list .unit-circle:first-child {
  margin-left: 30rpx;
}

.unit-list .item image {
  width: 96rpx;
  height: 96rpx;
}

.unit-list .active {
  background: rgba(40, 45, 75, 1);
}

.unit-list .active .index {
  background: #ffd100;
}

/*圆环进度条文字*/

.circle_info {
  position: absolute;
  width: 100%;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  display: flex;
  align-items: center;
  justify-content: center;
}
