<view class="page-home">
  <!-- <header>123123</header> -->
  <view class="header" style="padding-top: {{height}}px">
    <view class="popver-select" bindtap='showDialect'>
      {{currentDialect.languageName}}
      <image src="/pages/images/icon-{{ showDialect ? 'down' : 'up' }}.svg"></image>
    </view>
    <view class="progress">
      <progress percent="60" active backgroundColor="#B0BEC5" color="#FBC02E" stroke-width="4" border-radius="15" />
      <view class="txt">
        98 /
        <text>100</text>
      </view>
    </view>
    <view class="money" bindtap='showBuyModal'>
      <image src="/pages/images/icon-money.svg"></image>
      {{userInfo.cost}}
    </view>
  </view>
  <view class="content" style="height: {{warpHeight}}px">
    <view class="popver-list" wx:if="{{showDialect}}">
      <view class="left">
        <view class='item' wx:for="{{userDialect}}" wx:for-item="item" wx:key="index" data-index="{{index}}" data-item="{{item}}" bindtap="selectDialect">
          <image src='/pages/images/icon-check-blue.svg' wx:if="{{item.checked}}"></image>
          <text class="{{item.checked?'select':''}}">{{item.languageName}}</text>
        </view>
      </view>
      <view class="right" bindtap="goLanguage">+</view>
    </view>
    <buy show="{{showBuyModal}}"></buy>
    <view class='padding-box'>
      <view class="home-warp" bindtap='goSubject'>
        <view class="box">
          <view class="star">
            <image src="/pages/images/main/icon-star.svg"></image>
          </view>
          <image class="unit-img" src="{{currentUnit.avatar}}"></image>
        </view>
        <view class="unit-txt">{{currentUnit.name}}</view>
      </view>
      <scroll-view class="unit-list" scroll-x="true">
        <view wx:for="{{unitList}}" wx:for-item="item" wx:key="index" class="item {{item.active ? 'active' : '' }}" data-item="{{item}}" bindtap='clickUnit'>
          <view class="index">0{{index + 1}}</view>
          <image src="{{item.avatar}}"></image>
        </view>
      </scroll-view>
    </view>
  </view>
</view>