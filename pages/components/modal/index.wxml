<view class='mask' wx:if='{{show}}' bindtap='clickMask'>
  <view class='modal-content' style='height:{{height}}'>
    <scroll-view scroll-y class='main-content'>
      <view class='title'>{{modalData.title}}</view>
      <input wx:if="{{modalData.type !== 2}}" class="weui-input" maxlength="10" placeholder="{{modalData.placeholder}}" />
      <textarea wx:if="{{modalData.type === 2}}" class="weui-input" maxlength="30" placeholder="{{modalData.placeholder}}" placeholder="{{modalData.placeholder}}" />
      <view class='tips'>{{modalData.tips}}</view>
    </scroll-view>
    <view class='modal-btn-wrapper'>
      <view class='confirm-btn' bindtap='confirm'>{{modalData.confirmTxt}}</view>
    </view>
  </view>
</view>