@import "../../../app.wxss";

.achieve-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #f5f7f9;
  padding: 40rpx;
  border-radius: 20rpx;
  margin: 30rpx 40rpx 0 40rpx;
}

.achieve-active {
  background: #e5f9ed;
}

.achieve-active .success {
  background: #00c853 !important;
}

.achieve-item .left {
  max-width: 80%;
}

.achieve-item .left .one {
  font-size: 38rpx;
  font-weight: 600;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.achieve-item .left .two {
  color: #90a4ae;
  font-size: 32rpx;
  margin: 10rpx 0;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.achieve-item .left .three {
  background: #90a4ae;
  font-size: 20rpx;
  color: white;
  border-radius: 40rpx;
  padding: 4rpx 20rpx;
  display: inline;
}

.achieve-item .right image {
  width: 96rpx;
  height: 96rpx;
}

.achieve-item .right progress {
  margin-top: 20rpx;
  border-radius: 40rpx;
}
