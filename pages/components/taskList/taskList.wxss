@import "../../../app.wxss";


.achieve-item {
  display: flex;
  justify-content: center;
  background: #f5f7f9;
  padding: 40rpx;
  border-radius: 20rpx;
  margin: 30rpx 40rpx 0 40rpx;
}

.achieve-active {
  background: #e5f9ed;
}

.achieve-active .three {
  background: #00c853 !important;
}

.achieve-item .left {
  flex: 1;
}

.achieve-item .left .one {
  font-size: 38rpx;
  font-weight: 600;
}

.achieve-item .left .two {
  color: #90a4ae;
  font-size: 32rpx;
  margin: 10rpx 0;
}

.achieve-item .left .three {
  background: #90a4ae;
  font-size: 20rpx;
  color: white;
  border-radius: 40rpx;
  padding: 2rpx 20rpx;
  font-weight: 800;
}

.achieve-item .right image {
  width: 96rpx;
  height: 96rpx;
}

.achieve-item .right progress {
  margin-top: 20rpx;
  border-radius: 40rpx;
}
