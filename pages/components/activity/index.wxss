@import "../../../app.wxss";

scroll-view {
  width: auto;
}

.activity-item {
  display: flex;
  padding: 32rpx 0;
}
/* :not(:last-child) */

.activity-item {
  border-bottom: 2rpx solid #eee;
}

.activity-item .left {
  flex: 1;
  margin-right: 68rpx;
  display: flex;
  justify-content: center;
  flex-direction: column;
}

.activity-item .left .name {
  font-size: 34rpx;
  font-weight: 600;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  line-height: 48rpx;
}

.activity-item .left .time {
  margin-top: 10rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: #90a4ae;
  line-height: 44rpx;
}

.activity-item .right {
}

.activity-item .right image {
  width: 160rpx;
  height: 160rpx;
  background: #999;
  border-radius: 20rpx;
}

.mask {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: rgba(0, 0, 0, 0.4);
  z-index: 9999;
}

.modal-content {
  display: flex;
  flex-direction: column;
  width: 90%;
  background-color: #fff;
  border-radius: 40rpx;
}

.modal-btn-wrapper {
  display: flex;
  flex-direction: row;
  height: 100rpx;
  line-height: 100rpx;
  border-top: 2rpx solid rgba(7, 17, 27, 0.1);
}

.cancel-btn, .confirm-btn {
  flex: 1;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 36rpx;
  color: #ffd100;
  background: #282d4b;
  border-radius: 0 0 40rpx 40rpx;
}

.main-content {
  flex: 1;
  width: 90%;
  height: 100%;
  overflow-y: hidden;
  padding: 48rpx;
}

.modal-title {
  font-size: 38rpx;
  font-weight: 600;
  color: rgba(40, 45, 75, 1);
  text-align: center;
}



