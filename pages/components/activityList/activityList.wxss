@import "../../../app.wxss";

.activity-item {
  display: flex;
  justify-content: center;
  border-radius: 20rpx;
  margin: 30rpx 40rpx 0 40rpx;
  padding-bottom: 32rpx;
}

/* :not(:last-child) */

.activity-item {
  border-bottom: 2rpx solid #eee;
}

.activity-item .left {
  flex: 1;
  margin-right: 68rpx;
  display: flex;
  justify-content: center;
  flex-direction: column;
}

.activity-item .left .name {
  font-size: 34rpx;
  font-weight: 600;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  line-height: 48rpx;
}

.activity-item .left .time {
  margin-top: 10rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: #90a4ae;
  line-height: 44rpx;
  display: flex;
  align-items: center;
}

.time view.type {
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50rpx;
  margin-left: 16rpx;
  padding: 4rpx 16rpx;
}

.time view.yellow {
  background: #fff2b2;
  color: #f57f17;
}

.time view.blue {
  background: #d6e6ff;
  color: #3380ff;
}

.time view  image {
  width: 32rpx;
  height: 32rpx;
}

.activity-item .right image {
  width: 160rpx;
  height: 160rpx;
  background: #999;
  border-radius: 20rpx;
}
