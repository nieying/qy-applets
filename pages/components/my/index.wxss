@import "../../../app.wxss";

.user-info {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.user-pic {
  width: 184rpx;
  height: 184rpx;
  border-radius: 50%;
  background: #ffd100;
}

.user-name {
  background: #f5f7f9;
  padding: 4rpx 30rpx;
  border-radius: 40rpx;
  font-weight: 600;
  font-size: 32rpx;
  margin: 14rpx 0;
}

.user-sign {
  color: #90a4ae;
  font-size: 28rpx;
}

.user-info .money {
  position: absolute;
  top: 0;
  right: 0;
}

.user-info .money image {
  width: 80rpx;
  height: 40rpx;
  background: #90a4ae;
}

.user-opts {
  display: flex;
  margin-bottom: 30rpx;
}

.user-opts .vip, .user-opts .union {
  margin-top: 30rpx;
  flex: 1;
  background: #f5f7f9;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20rpx;
  border-radius: 20rpx;
  font-size: 32rpx;
  font-weight: 600;
}

.user-opts .union {
  margin-left: 40rpx;
}

.achieve-item {
  display: flex;
  justify-content: center;
  background: #f5f7f9;
  padding: 40rpx;
  border-radius: 20rpx;
  margin-top: 30rpx;
}

.achieve-item .left {
  flex: 1;
}

.achieve-item .left .one {
  font-size: 38rpx;
  font-weight: 600;
}

.achieve-item .left .two {
  color: #90a4ae;
  font-size: 32rpx;
  margin: 10rpx 0;
}

.achieve-item .left .three {
  background: #90a4ae;
  font-size: 20rpx;
  color: white;
  border-radius: 40rpx;
  padding: 2rpx 20rpx;
  font-weight: 800;
}

.achieve-item .right image {
  width: 80rpx;
  height: 60rpx;
  background: #90a4ae;
}

.achieve-item .right progress {
  margin-top: 20rpx;
  border-radius: 40rpx;
}
