@import "../../../app.wxss";

.user-info {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.user-pic {
  width: 80px;
  height: 80px;
  border-radius: 50%;
  background: #999;
}

.user-name {
  background: #eee;
  padding: 2px 15px;
  border-radius: 20px;
  font-size: 12px;
  margin: 7px 0;
}

.user-sign {
  color: #999;
  font-size: 10px;
}

.user-info .money {
  position: absolute;
  top: 0;
  right: 0;
}

.user-info .money image {
  width: 40px;
  height: 20px;
  background: #999;
}

.user-opts {
  display: flex;
  margin-bottom: 15px;
}

.user-opts .vip, .user-opts .union {
  margin-top: 15px;
  flex: 1;
  background: #eee;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 10px;
  border-radius: 10px;
}

.user-opts .union {
  margin-left: 20px;
}

.achieve .title {
  border-left: 3px solid yellow;
  padding-left: 10px;
  font-size: 16px;
}

.achieve-item {
  display: flex;
  justify-content: center;
  background: #eee;
  padding: 20px;
  border-radius: 10px; 
  margin-top: 15px;
}

.achieve-item .left {
  flex: 1;
}

.achieve-item .left .one {
}

.achieve-item .left .two {
  color: #999;
  margin: 5px 0;
}

.achieve-item .left .three {
  background: #999;
  font-size: 12px;
  color: white;
  border-radius: 20px;
  padding: 1px 10px;
}

.achieve-item .right image {
  width: 40px;
  height: 30px;
  background: #999;
}

.achieve-item .right progress {
  margin-top: 10px;
  border-radius: 20px;
}
