<view class="page-activity">
  <view class="header" style='padding-top: {{height + 10}}px'>
    <text class="title">个人主页</text>
  </view>
  <view class="content">
    <view class="user-info">
      <view class="money">
        <image src="/pages/images/icon-money.svg"></image>
        <view>228</view>
      </view>
      <image class="user-pic" src="/pages/images/my/woman.svg"></image>
      <view class="user-name" bindtap='showModal' data-type="1">用户2345678</view>
      <view class="user-sign" bindtap='showModal' data-type="2">个性签名文字长度限制，不要换行 </view>
    </view>
    <view class="user-opts">
      <view class="vip" bindtap='goVip'>
        <image src='/pages/images/my/icon-vip-active.svg'></image> 会员中心</view>
      <view class="union" bindtap='showModal' data-type="3">
        <image src='/pages/images/my/icon-union.svg'></image>所属协会</view>
    </view>
    <view class="achieve">
      <view class="title">我的成就</view>

      <view class="achieve-item">
        <view class="left">
          <view class="one">千言冠军</view>
          <view class="two">完成基础试题项目</view>
          <text class="three">60/100</text>
        </view>
        <view class="right">
          <image src="/pages/images/my/icon-achieve.svg"></image>
          <progress percent="60" active backgroundColor="#EAEDF2" color="#FFD100" stroke-width="4" border-radius="10" />
        </view>
      </view>
      <view class="achieve-item">
        <view class="left">
          <view class="one">学习证明</view>
          <view class="two">完成基础试题项目</view>
          <text class="three">0/1000</text>
        </view>
        <view class="right">
          <image src="/pages/images/my/icon-achieve2.svg"></image>

          <progress percent="0" activebackgroundColor="#EAEDF2" color="#FFD100" stroke-width="4" border-radius="10" />
        </view>
      </view>
      <view class="achieve-item">
        <view class="left">
          <view class="one">志愿参与时长</view>
          <view class="two">完成基础试题项目</view>
          <text class="three">0/1000</text>
        </view>
        <view class="right">
          <image src="/pages/images/my/icon-achieve3.svg"></image>
          <progress percent="0" activebackgroundColor="#EAEDF2" color="#FFD100" stroke-width="4" border-radius="10" />
        </view>
      </view>
    </view>
  </view>
  <modal show="{{show}}" modalData="{{modalData}}"></modal>
</view>